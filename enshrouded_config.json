{
   "UpdateStages": [
        {
            "UpdateStageName": "SteamCmd Server Update",
            "UpdateSource": "SteamCMD",
            "UpdateSourceData": "{{SteamAppId}}",
            "UpdateSourceArgs": "{{ServerFilesBetaVersion}}",
            "UpdateSourcePlatform": "Windows",
            "ForceDownloadPlatform": "Windows"
        }
    ],

    "Ports": [
        {
            "Name": "Game / Query Port",
            "Ref": "Port1",
            "Protocol": "Both",
            "DefaultPort": 15637
        },
        {
            "Name": "Game / Query Port",
            "Ref": "Port2",
            "Protocol": "Both",
            "DefaultPort": 15636
        },
        {
            "Name": "Game / Query Port",
            "Ref": "Port3",
            "Protocol": "Both",
            "DefaultPort": 15638
        }
    ],

    "Parameters": [
        {
            "FieldName": "SteamAppId",
            "DisplayName": "Server AppId",
            "Description": "The Steam.DB AppId of the server files",
            "InputType": "number",
            "DefaultValue": "2278520"
        },
        {
            "FieldName": "ServerFilesBetaVersion",
            "DisplayName": "Beta Branch Version",
            "Description": "Server files beta branch version string, use 'public' for latest released",
            "InputType": "text",
            "DefaultValue": "public"
        },
        {
            "FieldName": "ExecutablePath",
            "DisplayName": "Path to server .exe",
            "Description": "relative .exe path to container root, i.E enshrouded_server.exe",
            "InputType": "text",
            "DefaultValue": "enshrouded_server.exe"
        },
        {
            "FieldName": "LaunchArguments",
            "DisplayName": "Startparameter",
            "Description": "Parameters to configure the server .exe",
            "InputType": "text",
            "DefaultValue": ""
        },
        {
            "FieldName": "StopCmd",
            "DisplayName": "Stop Command",
            "Description": "The stop text command is issued, before AMP tries to close (X) the instance",
            "InputType": "text",
            "DefaultValue": ""
        }
    ]
}
